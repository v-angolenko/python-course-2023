import random


def multiplication_quiz():
    print("Ласкаво просимо до тренажера таблиці множення!")
    range_start = int(input("Введіть початок діапазону чисел: "))
    range_end = int(input("Введіть кінець діапазону чисел: "))

    while True:
        num1 = random.randint(range_start, range_end)
        num2 = random.randint(range_start, range_end)
        correct_answer = num1 * num2

        while True:
            try:
                user_answer = int(input(f"Скільки буде {num1} * {num2}? "))
                break
            except ValueError:
                print("Некоректний формат відповіді, спробуйте ще раз.")

        if user_answer == correct_answer:
            print("Вірно!")
        else:
            print(f"Невірно. Правильна відповідь: {correct_answer}")

        continue_quiz = input("Бажаєте продовжити? (так/ні): ").lower()
        if continue_quiz != "так":
            print("Дякуємо за участь!")
            break


multiplication_quiz()
